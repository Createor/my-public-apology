<div class="ui top attached inverted blue menu" style="margin-bottom: 1em;">
  <div class="left menu">
    <a class="item" ng-click="landingPage()" style="padding: .25em .75em;">
      <img class="ui image" src="/images/mpa-logo-white.png" style="width: 4em;"></i>
    </a>
    <a class="item" href="https://twitter.com/mypublicapology" target="_blank">
      <i class="big twitter icon" style="margin-right: 0;"></i>
    </a>
    <a class="icon item" href="https://github.com/TheConnMan/my-public-apology/issues" target="_blank" title="Open an Issue">
      <i class="big github icon" style="margin-right: 0;"></i>
    </a>
    <% if (user) { %>
      <a class="item" ng-click="myApologies()">
        <i class="user icon"></i>
        <%= user.name %>
      </a>
    <% } else { %>
      <a class="item" href="/auth/google">
        <i class="google icon"></i>
        Login
      </a>
    <% } %>
  </div>
  <div class="right menu">
    <a class="item" <%= user ? 'ng-click=createApology()' : 'href=/auth/google' %> >
      <i class="write icon"></i> Create
    </a>
    <% if (user) { %>
      <a class="item" href="/auth/logout">
        <i class="sign out icon"></i>
      </a>
    <% } %>
  </div>
</div>
